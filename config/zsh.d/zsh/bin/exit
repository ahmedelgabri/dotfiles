#!/usr/bin/env sh
set -ue -o pipefail
# only exit if we're not on the last pane
# https://github.com/fatih/dotfiles/blob/706e1d26a1b8526755bee92c8093ab61be077894/zshrc#L238-L254

exit() {
  if [ -z "$TMUX" ]; then
    builtin exit
    return
  fi

  panes=$(tmux list-panes | wc -l)
  wins=$(tmux list-windows | wc -l)
  count=${$panes + $wins - 1}

  if [ $count -eq 1 ]; then
    tmux detach
  else
    builtin exit
  fi
}
