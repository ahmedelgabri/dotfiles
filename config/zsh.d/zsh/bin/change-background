#!/usr/bin/env bash

change_background() {
	# change background to the given mode. If mode is missing,
	# we try to deduct it from the system settings.
	local mode="dark"

	if [ -z "$1" ]; then
		if ! defaults read -g AppleInterfaceStyle >/dev/null; then
			mode="light"
		fi
	else
		if [ "$1" == "light" ]; then
			osascript -l JavaScript -e "Application('System Events').appearancePreferences.darkMode = false" >/dev/null
			mode="light"
		elif [ "$1" == "dark" ]; then
			osascript -l JavaScript -e "Application('System Events').appearancePreferences.darkMode = true" >/dev/null
			mode="dark"
		fi
	fi

	# Change kitty & neovim
	if [ "$mode" == "dark" ]; then
		nvr --nostart --remote-send ':set background=dark<cr>'
		kitty @ --to="$KITTY_LISTEN_ON" set-colors -a ~/.config/kitty/colors/color.conf
	elif [ "$mode" == "light" ]; then
		nvr --nostart --remote-send ':set background=light<cr>'
		kitty @ --to="$KITTY_LISTEN_ON" set-colors -a ~/.config/kitty/colors/atom-one-light.conf
	fi
}

change_background "$@"
