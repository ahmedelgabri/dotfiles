#!/usr/bin/env bash

set -ue -o pipefail

if [[ -n "${DEBUG-}" ]]; then
	set -x
fi

FLAGS="$(CoreLocationCLI --format "-latitude %latitude -longitude %longitude")"

if grep -qP "\-latitude (\d+\.?\d+) \-longitude (\d+\.?\d+)" <<<"$FLAGS"; then
	printf "%s %s" "ó°©· " "$(next-prayer mawaqit <<<"$FLAGS")"
else
	printf "%s" "$(next-prayer aladhan)"
fi
