{
	"$schema": "https://json.schemastore.org/claude-code-settings.json",
	"alwaysThinkingEnabled": false,
	"includeCoAuthoredBy": false,
	"permissions": {
		"allow": [
			"Bash(fd:*)",
			"Bash(rg:*)",
			"Bash(find:*)",
			"Bash(grep:*)",
			"Bash(cat:*)",
			"Bash(bat:*)",
			"Bash(yarn:*)",
			"Bash(pnpm:*)",
			"Bash(mkdir:*)",
			"Bash(echo:*)",
			"Bash(tail:*)",
			"Bash(head:*)",
			"Bash(cd:*)",
			"Bash(uniq:*)",
			"Bash(sort:*)",
			"Bash(awk:*)",
			"Bash(pwd:*)",
			"Bash(nix flake check:*)",
			"Bash(command git diff:*)",
			"Bash(command git log:*)",
			"Bash(command git show:*)",
			"Bash(command git status:*)",
			"Bash(git diff:*)",
			"Bash(git log:*)",
			"Bash(git show:*)",
			"Bash(git status:*)",
			"Bash(gh pr view:*)",
			"Bash(gh issue view:*)",
			"Bash(gh repo view:*)",
			"Bash(gh run view:*)"
		],
		"deny": [
			"Read(.env)",
			"Read(.envrc)",
			"Read(.env.*)",
			"Read(.zshrc)",
			"Read(.zshenv)",
			"Read(.bashrc)",
			"Read(.profile)",
			"Read(node_modules)",
			"Read(.git)",
			"Grep",
			"Glob"
		],
		"ask": [
			"Bash(mv:*)",
			"Bash(cp:*)",
			"Bash(node:*)",
			"Bash(xargs:*)",
			"Bash(git:*)",
			"Bash(curl:*)"
		]
	},
	"statusLine": {
		"type": "command",
		"command": "~/.claude/scripts/statusline.py"
	},
	"hooks": {
		"SessionStart": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "~/.claude/hooks/log-event.sh SessionStart"
					}
				]
			}
		],
		"SessionEnd": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "~/.claude/hooks/log-event.sh SessionEnd"
					}
				]
			}
		],
		"UserPromptSubmit": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "~/.claude/hooks/log-event.sh UserPromptSubmit"
					},
					{
						"type": "command",
						"command": "~/.claude/hooks/aggregate-prompts.sh UserPromptSubmit"
					}
				]
			}
		],
		"PreToolUse": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "~/.claude/hooks/log-event.sh PreToolUse"
					}
				]
			},
			{
				"matcher": "Bash",
				"hooks": [
					{
						"type": "command",
						"command": "~/.claude/hooks/validate-bash.sh"
					}
				]
			}
		],
		"PostToolUse": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "~/.claude/hooks/log-event.sh PostToolUse"
					}
				]
			}
		],
		"Stop": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "~/.claude/hooks/log-event.sh Stop"
					}
				]
			}
		],
		"SubagentStop": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "~/.claude/hooks/log-event.sh SubagentStop"
					}
				]
			}
		],
		"Notification": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "~/.claude/hooks/log-event.sh Notification"
					},
					{
						"type": "command",
						"command": "jq -r '.message' | xargs -I {} hs -c 'hs.notify.new({title=\"Claude\", informativeText=\"{}\"}):send()'"
					}
				]
			}
		],
		"PreCompact": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "~/.claude/hooks/log-event.sh PreCompact"
					}
				]
			}
		]
	}
}
