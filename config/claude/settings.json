{
	"permissions": {
		"allow": [
			"Bash(fd:*)",
			"Bash(rg:*)",
			"Bash(find:*)",
			"Bash(grep:*)",
			"Bash(yarn:*)",
			"Bash(mkdir:*)",
			"Bash(echo:*)",
			"Bash(tail:*)",
			"Bash(head:*)",
			"Bash(cd:*)",
			"Bash(uniq:*)",
			"Bash(sort:*)",
			"Bash(awk:*)",
			"Bash(pwd:*)",
			"Bash(nix flake check:*)",
			"Bash(git log:*)",
			"Bash(git diff:*)",
			"Bash(git show:*)"
		],
		"deny": [
			"Read(.env)",
			"Read(.envrc)",
			"Read(.env.*)",
			"Read(.zshrc)",
			"Read(.zshenv)",
			"Read(.bashrc)",
			"Read(.profile)"
		],
		"ask": [
			"Bash(mv:*)",
			"Bash(cp:*)",
			"Bash(node:*)",
			"Bash(xargs:*)",
			"Bash(git:*)",
			"Bash(curl:*)"
		]
	},
	"statusLine": {
		"type": "command",
		"command": "~/.claude/statusline.py"
	},
	"hooks": {
		"Notification": [
			{
				"matcher": "",
				"hooks": [
					{
						"type": "command",
						"command": "jq -r '.message' | xargs -I {} hs -c 'hs.notify.new({title=\"Claude\", informativeText=\"{}\"}):send()'"
					}
				]
			}
		]
	},
	"alwaysThinkingEnabled": false
}
