# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[Makefile]
indent_style = space
indent_size = 4


# Tab indentation
[*.{rb,sass,jade,slim,haml,yaml,yml,coffee}]
indent_size = 2
