macro index <f3> '<enter-command>source ~/.mutt/accounts/work<enter><change-folder>!<enter>'

# set sendmail_wait = 0
unset record # don't save messages, gmail already does this.
set folder = "imaps://imap.gmail.com:993"
set smtp_authenticators = 'gssapi:login'
set fast_reply
set include

# Pre-fills the "From" address when replying to emails, based on the email account that received the original mail.
# Useful in case of multiple accounts or multiple aliases
set reverse_name
set envelope_from

# Default inbox.
set spoolfile = "+INBOX"

# Other special folders. ----------------------------------------------------------------------------------------------
set mbox      = "+[Gmail]/All Mail"
set postponed = "+[Gmail]/Drafts"
set trash     = "+[Gmail]/Trash" # This is using the 'trash' patch.

# sorting -------------------------------------------------------------------------------------------------------------
set sort=threads
set sort_aux=reverse-last-date-received

# Sidebar -------------------------------------------------------------------------------------------------------
# set sidebar_visible
